<div class="row">
	<div class="col-md-12">
		<div class="col-md-8">
			<h1>All Properties</h1>
		</div>
		<div class="col-md-2 end pull-right align-bottom">
			<%= link_to "New Property", new_house_path, "data-turbolinks": "false", class: "btn btn-primary btn-lg" %>
		</div>
	</div>
</div>
<br />

<%= form_tag compare_houses_path, method: :get do %>
<table class="table table-striped table-hover">
  <thead>
    <tr style="background-color:#337ab7">
      <th></th>
      <th>Name</th>
			<th>Cash Flow</th>
			<th>Cap Rate</th>
			<th>Cash On Cash</th>
      <th>ROI</th>
      <th>Rent To Value</th>
      <th>GRM</th>
    </tr>
  </thead>
  <tbody>
		<% @houses.each do |house| %>
    	<tr>
				<td><%= check_box_tag "house_ids[]", house.id %></td>
				<td><%= link_to house.name, house, "data-turbolinks": "false" %></td>
				<td>$<%= number_with_precision(house.cashFlow, :precision => 2, :delimiter => ',') %></td>
				<td><%= number_with_precision(house.effectiveCapRate, :precision => 2) %>%</td>
				<td><%= number_with_precision(house.ratioCashOnCash, :precision => 2) %>%</td>
				<td><%= number_with_precision(house.totalReturnOnInvestment, :precision => 2) %>%</td>
				<td><%= number_with_precision(house.rentToValue, :precision => 2) %>%</td>
				<td><%= number_with_precision(house.grossRentMultiplier, :precision => 2) %></td>
    	</tr>
		<% end %>
  </tbody>
</table>
<p><%= submit_tag 'Compare Properties', class: "btn btn-primary btn-lg" %></p>
<% end %>
