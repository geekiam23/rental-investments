<%= form_for @house do |f| %>
  <% if house.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(house.errors.count, "error") %>.</h4>
        <ul>
          <% house.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="body-text">
    <div class="row">
      <div class="col-md-6">
          <%= f.label :rehab_cost_exterior %>
          <p>$<%= number_with_precision(@house.rehab_cost_exterior, :precision => 2, :delimiter => ',') %></p>
      </div>
      <div class="col-md-6">
          <%= f.label :rehab_cost_interior %>
          <p>$<%= number_with_precision(@house.rehab_cost_interior, :precision => 2, :delimiter => ',') %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <%= f.label :rehab_cost_electrical %>
          <p>$<%= number_with_precision(@house.rehab_cost_electrical, :precision => 2, :delimiter => ',') %></p>
      </div>
      <div class="col-md-6">
          <%= f.label :rehab_cost_plumbing %>
          <p>$<%= number_with_precision(@house.rehab_cost_plumbing, :precision => 2, :delimiter => ',') %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <%= f.label :rehab_cost_appliances %>
          <p>$<%= number_with_precision(@house.rehab_cost_appliances, :precision => 2, :delimiter => ',') %></p>
      </div>
      <div class="col-md-6">
          <%= f.label :rehab_cost_landscaping %>
          <p>$<%= number_with_precision(@house.rehab_cost_landscaping, :precision => 2, :delimiter => ',') %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <%= f.label :rehab_cost_misc %>
          <p>$<%= number_with_precision(@house.rehab_cost_misc, :precision => 2, :delimiter => ',') %></p>
      </div>
    </div>
    <p class="break"></p>
    <div class="row">
      <div class="col-md-12">
        <%= f.label :rehab_Total %>
        <p id="rehabTotal" class="rehabTotal"></p>
      </div>
    </div>
  </div>
<% end %>
