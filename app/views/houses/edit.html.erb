<%= form_for @house do |f| %>
  <div class="container">
    <div class="row form-group">
      <div class="col-xs-12">
        <ul class="nav nav-pills nav-justified thumbnail setup-panel">
          <li class="active">
            <a href="#step-1">
              <h4 class="list-group-item-heading">Step 1</h4>
              <p class="list-group-item-text">Housing Info</p>
            </a>
          </li>
          <li class="active">
            <a href="#step-2">
              <h4 class="list-group-item-heading">Step 2</h4>
              <p class="list-group-item-text">Financing</p>
            </a>
          </li>
          <li class="active">
            <a href="#step-3">
              <h4 class="list-group-item-heading">Step 3</h4>
              <p class="list-group-item-text">Purchase Costs</p>
            </a>
          </li>
          <li class="active">
            <a href="#step-4">
              <h4 class="list-group-item-heading">Step 4</h4>
              <p class="list-group-item-text">Rehab Costs</p>
            </a>
          </li>
          <li class="active">
            <a href="#step-5">
              <h4 class="list-group-item-heading">Step 5</h4>
              <p class="list-group-item-text">Income</p>
            </a>
          </li>
          <li class="active">
            <a href="#step-6">
              <h4 class="list-group-item-heading">Step 6</h4>
              <p class="list-group-item-text">Expenses</p>
            </a>
          </li>
          <li class="active">
            <a href="#step-7">
              <h4 class="list-group-item-heading">Step 7</h4>
              <p class="list-group-item-text">Assumptions</p>
            </a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-4 text-center pull-left">
          <h1><%= @house.name %></h1>
        </div>
        <div class="col-md-3 pull-right d-inline">
          <%= f.submit "Submit", class: 'btn btn-success btn-lg' %>
          <%= link_to "Delete", @house, method: :delete, class: "btn btn-danger btn-lg", data: {confirm: "Are you sure you want to delete this house?"} %>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="list-group-item-heading">Step 1</h1>
            <h4 class="list-group-item-text">Housing Info</h4>
            <div class="row">
              <div class="col-md-8 center-block">
                <div class="body-text">
                  <div class="row">
                    <div class="col-md-12">
                      <%= f.label :name %>
                      <%= f.text_field :name, class: 'form-control', placeholder: "Enter House Nickname" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <%= f.label :description %>
                      <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter House Notes" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <%= f.label :address %>
                      <%= f.text_field :address, class: 'form-control', placeholder: "Enter Address" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4">
                      <%= f.label :city %>
                      <%= f.text_field :city, class: 'form-control', placeholder: "Enter City" %>
                    </div>
                    <div class="col-md-4">
                      <%= f.label :state %>
                      <%= f.text_field :state, class: 'form-control', placeholder: "Enter State" %>
                    </div>
                    <div class="col-md-4">
                      <%= f.label :zip %>
                      <%= f.text_field :zip, class: 'form-control', placeholder: "Enter Zip" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <%= f.label :house_Type %>
                      <%= f.text_field :house_type, class: 'form-control', placeholder: "Enter Property Type" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <%= f.label :number_of_Beds  %>
                      <%= f.number_field :numBeds, class: 'form-control', placeholder: "Enter Number of Bedrooms" %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :number_of_Baths %>
                      <%= f.number_field :numBaths, class: 'form-control', placeholder: "Enter Number of Bathrooms" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <%= f.label :footage %>
                      <%= f.number_field :footage, class: 'form-control', placeholder: "Enter Square Footage" %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :year %>
                      <%= f.text_field :year, class: 'form-control', placeholder: "Enter Year Built" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <%= f.label :parking %>
                      <%= f.text_field :parking, class: 'form-control', placeholder: "Enter Parking" %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :lot %>
                      <%= f.number_field :lot, class: 'form-control', placeholder: "Enter Lot Size" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <%= f.label :zoning %>
                      <%= f.text_field :zoning, class: 'form-control', placeholder: "Enter Zoning Type" %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :MLS %>
                      <%= f.text_field :mls, class: 'form-control', placeholder: "Enter MLS Number" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container loans">
      <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="text-center">STEP 2</h1>
            <div class="row">
              <div class="col-md-8 center-block">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :purchase_Price %>
                    <%= f.number_field :purchase_price, class: 'form-control', value: number_to_currency(f.object.purchase_price.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :after_Value %>
                    <%= f.number_field :after_value, class: 'form-control', value: number_to_currency(f.object.after_value.to_f, delimiter: '', unit: '')%>
                  </div>
                </div>
                <div class="row cash">
                  <div class="col-md-4">
                    <%= f.label :down_Payment %>
                    <%= f.number_field :down_payment, class: 'form-control', value: number_to_currency(f.object.down_payment.to_f, delimiter: '', unit: '')%>
                  </div>
                  <div class="col-md-4">
                    <%= f.label :interest %>
                    <%= f.number_field :interest, :step => 'any', class: "number form-control", in: 0...11 %>
                  </div>
                  <div class="col-md-4">
                    <%= f.label :loan_Term %>
                    <%= f.number_field :loan_term, class: "form-control" %>
                  </div>
                </div>
                <div class="row cash">
                  <div class="col-md-6">
                    <%= f.label :pmi_Upfront %>
                    <%= f.number_field :pmi_upfront, class: 'form-control', in: 0...11 %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :pmi_Recurring %>
                    <%= f.number_field :pmi_recurring, class: 'form-control', in: 0...11 %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="text-center">STEP 3</h1>
            <div class="row">
              <div class="col-md-8 center-block">

                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :purchase_Cost_Inspection %>
                    <%= f.number_field :purchase_cost_inspection, class: 'form-control', value: number_to_currency(f.object.purchase_cost_inspection.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :purchase_Cost_Appraisal %>
                    <%= f.number_field :purchase_cost_appraisal, class: 'form-control', value: number_to_currency(f.object.purchase_cost_appraisal.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :closing_Costs %>
                    <%= f.number_field :closing_costs, class: 'form-control', in: 0...11 %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row setup-content" id="step-4">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="text-center">STEP 4</h1>
            <div class="row">
              <div class="col-md-8 center-block">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_exterior %>
                    <%= f.number_field :rehab_cost_exterior, class: 'form-control', value: number_to_currency(f.object.rehab_cost_exterior.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_interior %>
                    <%= f.number_field :rehab_cost_interior, class: 'form-control', value: number_to_currency(f.object.rehab_cost_interior.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_electrical %>
                    <%= f.number_field :rehab_cost_electrical, class: 'form-control', value: number_to_currency(f.object.rehab_cost_electrical.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_plumbing %>
                    <%= f.number_field :rehab_cost_plumbing, class: 'form-control', value: number_to_currency(f.object.rehab_cost_plumbing.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_appliances %>
                    <%= f.number_field :rehab_cost_appliances, class: 'form-control', value: number_to_currency(f.object.rehab_cost_appliances.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_landscaping %>
                    <%= f.number_field :rehab_cost_landscaping, class: 'form-control', value: number_to_currency(f.object.rehab_cost_landscaping.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :rehab_cost_misc %>
                    <%= f.number_field :rehab_cost_misc, class: 'form-control', value: number_to_currency(f.object.rehab_cost_misc.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row setup-content" id="step-5">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="text-center">STEP 5</h1>
            <div class="row">
              <div class="col-md-8 center-block">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :income_gross_rent %>
                    <%= f.number_field :income_gross_rent, class: 'form-control', value: number_to_currency(f.object.income_gross_rent.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :income_other_rent %>
                    <%= f.number_field :income_other_rent, class: 'form-control', value: number_to_currency(f.object.income_other_rent.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row setup-content" id="step-7">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="list-group-item-heading">Step 7</h1>
            <h4 class="list-group-item-text">Assumptions</h4>
            <div class="row">
              <div class="col-md-8 center-block">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :assumptions_appreciation %>
                    <%= f.number_field :assumptions_appreciation, class: 'form-control', in: 0...11 %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :assumptions_vacancy %>
                    <%= f.number_field :assumptions_vacancy, class: 'form-control', in: 0...11 %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :assumptions_income_increase %>
                    <%= f.number_field :assumptions_income_increase, class: 'form-control', in: 0...11 %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :assumptions_expense_increase %>
                    <%= f.number_field :assumptions_expense_increase, class: 'form-control', in: 0...11 %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :assumptions_land_value %>
                    <%= f.number_field :assumptions_land_value, class: 'form-control', value: number_to_currency(f.object.assumptions_land_value.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :assumptions_selling_cost %>
                    <%= f.number_field :assumptions_selling_cost, class: 'form-control', in: 0...11 %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row setup-content" id="step-6">
        <div class="col-xs-12">
          <div class="col-md-12 well text-center">
            <h1 class="text-center">STEP 6</h1>
            <div class="row">
              <div class="col-md-8 center-block">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :expenses_taxes %>
                    <%= f.number_field :expenses_taxes, class: 'form-control', value: number_to_currency(f.object.expenses_taxes.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :expenses_insurance %>
                    <%= f.number_field :expenses_insurance, class: 'form-control', value: number_to_currency(f.object.expenses_insurance.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :expenses_management %>
                    <%= f.number_field :expenses_management, class: 'form-control', value: number_to_currency(f.object.expenses_management.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :expenses_maintanance %>
                    <%= f.number_field :expenses_maintanance, class: 'form-control', value: number_to_currency(f.object.expenses_maintanance.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :expenses_expenditures %>
                    <%= f.number_field :expenses_expenditures, class: 'form-control', value: number_to_currency(f.object.expenses_expenditures.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :expenses_landscaping %>
                    <%= f.number_field :expenses_landscaping, class: 'form-control', value: number_to_currency(f.object.expenses_landscaping.to_f, delimiter: '', unit: '') %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :expenses_misc  %>
                    <%= f.number_field :expenses_misc, class: 'form-control', value: number_to_currency(f.object.expenses_misc.to_f, delimiter: '', unit: '') %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :expenses_total%>
                  </div>
                </div>
              </div>
            </div>
          </div>
