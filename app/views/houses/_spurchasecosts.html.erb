<%= form_for @house do |f| %>
  <% if house.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(house.errors.count, "error") %>.</h4>
        <ul>
          <% house.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="body-text">
    <div class="row">
      <div class="col-md-6">
          <%= f.label :purchase_cost_inspection %>
          <p>$<%= number_with_precision(@house.purchase_cost_inspection, :precision => 2, :delimiter => ',') %></p>
      </div>
      <div class="col-md-6">
          <%= f.label :purchase_cost_appraisal %>
          <p>$<%= number_with_precision(@house.purchase_cost_appraisal, :precision => 2, :delimiter => ',') %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <%= f.label :closing_costs %>
          <p><%= @house.closing_costs %>% or </p>
          <p id="closingCostAmount" class="closingCostAmount"></p>
      </div>
    </div>
    <p class="break"></p>
    <div class="row">
      <div class="col-md-12">
        <%= f.label :purchase_Total %>
        <p id="purchaseTotal" class="purchaseTotal"></p>
      </div>
    </div>
  </div>
<% end %>
